<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dip"
    android:background="#7A7A7A"
    tools:context="com.example.angelhack.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="9dip"
        android:layout_marginTop="150dip"
        android:text="User Name:"
        android:textColor="#E8E8E8"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_password"
        android:layout_alignTop="@id/tv_username"
        android:layout_toRightOf="@id/tv_username"
        android:background="#E8E8E8"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:text="Password:"
        android:textColor="#E8E8E8"
        android:textSize="10pt" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#E8E8E8"
        android:onClick="login"
        android:text="Login" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="400dip"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="120dip"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:text=""
        android:textColor="#AA0000"
        android:textSize="7pt" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_password"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignTop="@+id/tv_password"
        android:background="#E8E8E8"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

</RelativeLayout>
